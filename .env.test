# Test Environment Variables
NODE_ENV=test

# MongoDB - will use in-memory server if not provided
MONGODB_HOST=localhost:27017
MONGODB_DB=kodekamper_test
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Redis - tests work without it, but some features will be skipped
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# JWT
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Geocoder (mock key for tests)
GEOCODER_PROVIDER=mapquest
GEOCODER_API_KEY=test-geocoder-key

# File Upload
FILE_UPLOAD_PATH=./public/uploads
MAX_FILE_UPLOAD=1000000

# SMTP (not used in tests)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_EMAIL=test@test.com
SMTP_PASSWORD=testpassword
FROM_EMAIL=noreply@test.com
FROM_NAME=Test Sender
