{
  "name": "kodekamper_api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server",
    "dev": "nodemon server",
    "data:import": "node seeder -i",
    "data:destroy": "node seeder -d",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "NODE_ENV=test jest --runInBand",
    "test:ci": "NODE_ENV=test jest --coverage --runInBand",
    "prepare": "husky install",
    "codeql:create-db": "rm -rf codeql-db && codeql database create codeql-db --language=javascript --source-root=.",
    "codeql:analyze": "codeql database analyze codeql-db --format=sarif-latest --output=codeql-results.sarif -- ~/codeql-queries/javascript/ql/src/codeql-suites/javascript-security-and-quality.qls",
    "codeql:scan": "npm run codeql:create-db && npm run codeql:analyze && echo '\nâœ… CodeQL scan complete! View results in codeql-results.sarif'",
    "codeql:clean": "rm -rf codeql-db codeql-results.sarif"
  },
  "keywords": [
    "REST API",
    "API",
    "Postman",
    "CRUD",
    "Node"
  ],
  "author": "Rodney Hammad",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^6.0.11",
    "morgan": "^1.10.0",
    "node-geocoder": "^4.4.1",
    "nodemailer": "^7.0.12",
    "redis": "^4.6.13",
    "slugify": "^1.6.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
